@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="container mt-5 mb-5">
    <div class="dashboard-header">
        <div class="welcome-section">
            <h1>👋 Salut, @User.Identity?.Name!</h1>
            <p class="lead">Bine ai venit în panoul tău de control.</p>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-md-6 col-lg-3">
            <div class="dashboard-card">
                <div class="dashboard-card-icon bg-primary">
                    <i class="bi bi-list-task"></i>
                </div>
                <div class="dashboard-card-body">
                    <h5>Task-uri</h5>
                    <p class="text-muted">Vizualizează și gestionează task-urile tale</p>
                    <a asp-controller="Tasks" asp-action="Index" class="btn btn-primary-custom btn-action">
                        <i class="bi bi-eye"></i> Vezi Task-uri
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="dashboard-card">
                <div class="dashboard-card-icon bg-success">
                    <i class="bi bi-kanban"></i>
                </div>
                <div class="dashboard-card-body">
                    <h5>Proiecte</h5>
                    <p class="text-muted">Gestionează proiectele tale</p>
                    <a asp-controller="Projects" asp-action="Index" class="btn btn-success-custom btn-action">
                        <i class="bi bi-folder"></i> Vezi Proiecte
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="dashboard-card">
                <div class="dashboard-card-icon bg-warning">
                    <i class="bi bi-plus-circle"></i>
                </div>
                <div class="dashboard-card-body">
                    <h5>Task Nou</h5>
                    <p class="text-muted">Creează un task nou rapid</p>
                    <a asp-controller="Tasks" asp-action="New" class="btn btn-warning-custom btn-action">
                        <i class="bi bi-plus"></i> Adaugă Task
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="dashboard-card">
                <div class="dashboard-card-icon bg-info">
                    <i class="bi bi-person-circle"></i>
                </div>
                <div class="dashboard-card-body">
                    <h5>Profilul Meu</h5>
                    <p class="text-muted">Setările contului tău</p>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-secondary-custom btn-action">
                        <i class="bi bi-gear"></i> Setări
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="info-card">
                <div class="info-card-header">
                    <i class="bi bi-info-circle"></i>
                    <h4>Informații Rapide</h4>
                </div>
                <div class="info-card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="stat-box">
                                <i class="bi bi-clock-history"></i>
                                <h3>Recent</h3>
                                <p>Vezi activitatea ta recentă și task-urile active</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <i class="bi bi-graph-up"></i>
                                <h3>Progres</h3>
                                <p>Monitorizează progresul proiectelor tale</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box">
                                <i class="bi bi-people"></i>
                                <h3>Echipă</h3>
                                <p>Colaborează cu membrii echipei tale</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>